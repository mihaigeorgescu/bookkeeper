{% extends '::base.html.twig' %}

{% block body -%}
	<h1>Book Manager</h1>
	<ul>
		{% for book in books %}
			<li>
				<a href="{{ path('book_show', {'id': book.id}) }}" title="{{ book.title }}">{{ book.title }}</a>
			</li>
		{% endfor %}
	</ul>
	<p><a href="{{ path('book_new') }}">Create new book</a></p>
{% endblock %}
