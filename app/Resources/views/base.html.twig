<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Symfony2 Training{% endblock %}</title>

		{% block stylesheets -%}
			<link rel="stylesheet" type="text/css" href="{{ asset('styles/main.css') }}" />
		{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
		<div id="container">
			<header id="header">
				<p id="logo">Custom CMS</p>
				<nav id="nav">
					<a href="{{ path('custom_cms_homepage') }}">Home</a>

					{% if is_granted('ROLE_ADMIN') %}
						 | <a href="{{ path('cms_user') }}" title="">Users</a>
						 | <a href="{{ path('cms_category') }}" title="">Categories</a>
						 | <a href="{{ path('cms_page') }}" title="">Pages</a>
					{% elseif is_granted('ROLE_USER') %}
						 | <a href="{{ path('cms_page') }}" title="">Pages</a>
					{% endif %}

					{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
						 | <a href="{{ path('logout') }}" title="">Logout</a>
					{% endif %}

				</nav>
			</header>
			<div id="flashmessages-container">
				{% for flashMessage in app.session.flashbag.get('msg') %}
					<div class="flmsg-container">{{ flashMessage }}</div>
				{% endfor %}
			</div>

			{% block body %}

			{% endblock %}

			{% block javascripts %}

			{% endblock %}
		</div>
	</body>
</html>
